# Production Environment Variables
# Copy this file to .env.production and update with actual values

# Database
DATABASE_URL="postgresql://gramchat:YOUR_SECURE_PASSWORD@postgres:5432/gramchat_db"

# Application
NODE_ENV=production
PORT=3000
FRONTEND_PORT=5173

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-production-jwt-secret-min-32-chars
SESSION_SECRET=your-production-session-secret-min-32-chars

# Redis
REDIS_URL=redis://redis:6379

# CORS - Update with your actual domains
CORS_ORIGIN=https://web.gramchat.ru

# API URL for frontend
VITE_API_URL=https://api.gramchat.ru

# Telegram Webhook (optional for production)
TELEGRAM_WEBHOOK_DOMAIN=https://api.gramchat.ru

# Admin Telegram IDs (comma-separated)
ADMIN_TELEGRAM_IDS=236692046

# Partner codes (optional)
PARTNER_CODES=PARTNER2024,SPECIAL2024